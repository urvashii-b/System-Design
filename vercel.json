{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/shorten", "dest": "/index.js" },
      { "src": "/r/(.*)", "dest": "/index.js" },
      { "src": "/api/stats/(.*)", "dest": "/index.js" },
      { "src": "/api/delete/(.*)", "dest": "/index.js" }
    ]
  }
  